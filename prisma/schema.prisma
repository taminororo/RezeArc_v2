generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TicketStatus {
  distributing
  limited
  ended
}

enum CongestionStatus {
  free
  slightly_crowded
  crowded
  offtime
}

model Event {
  id                 Int              @id @default(autoincrement())
  eventId            Int              @unique            // 企画ID（アプリ上の安定ID）
  eventName          String
  isDistributingTicket Boolean        @default(false)
  ticketStatus       TicketStatus?                        // 配布時のみ有効（NULL許容）
  congestionStatus   CongestionStatus
  eventText          String?                               // 説明文は任意
  imagePath     String?  // 例: "events/3.webp"（/public/events/3.webp を指す）
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
}
